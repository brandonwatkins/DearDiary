<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context="edu.mhu.cs.brandonwatkins.deardiary.ViewEditActivity">

    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="310dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/light_pink"
        android:onClick="saveBtn"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteBtn"
        app:srcCompat="@drawable/savebtn" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="310dp"
        android:layout_height="77dp"
        android:background="@color/light_pink"
        android:onClick="deleteBtn"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/deletebtn"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/viewEditText" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="338dp"
        android:layout_height="34dp"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/yearSpinner"
        app:layout_constraintHorizontal_bias="0.493" />

    <EditText
        android:id="@+id/viewEditText"
        android:layout_width="338dp"
        android:layout_height="267dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/txtDearDiaryEntry"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:maxLines="15"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.506" />

    <Spinner
        android:id="@+id/monthSpinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Spinner
        android:id="@+id/yearSpinner"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintRight_toLeftOf="@+id/monthSpinner"
        android:layout_marginRight="88dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="73dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/deardiarylogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp" />

</android.support.constraint.ConstraintLayout>
