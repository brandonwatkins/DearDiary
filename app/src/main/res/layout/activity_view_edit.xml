<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context="edu.mhu.cs.brandonwatkins.deardiary.ViewEditActivity">

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="310dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/light_pink"
        android:onClick="saveBtn"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton7"
        app:srcCompat="@drawable/savebtn" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="310dp"
        android:layout_height="77dp"
        android:background="@color/light_pink"
        android:onClick="deleteBtn"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/deletebtn"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/viewEditText" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_pink"
        android:onClick="selectDate"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calenderbtn" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="393dp"
        android:layout_height="39dp"
        android:layout_marginTop="39dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/viewEditText"
        android:layout_width="338dp"
        android:layout_height="267dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/txtDearDiaryEntry"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:maxLines="15"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
