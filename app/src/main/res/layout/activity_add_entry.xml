<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context="edu.mhu.cs.brandonwatkins.deardiary.AddNewEntryActivity">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:background="@color/light_pink"
        android:onClick="backBtn"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/backbtn"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/journalEntry" />

    <ImageButton
        android:id="@+id/saveEntryBtn"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_pink"
        android:onClick="saveBtn"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:srcCompat="@drawable/savebtn" />

    <TextView
        android:id="@+id/dateSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_pink"
        android:onClick="selectDate"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calenderbtn" />

    <EditText
        android:id="@+id/journalEntry"
        android:layout_width="338dp"
        android:layout_height="267dp"
        android:layout_marginTop="37dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/txtDearDiaryEntry"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:maxLines="15"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateSelected" />
</android.support.constraint.ConstraintLayout>
