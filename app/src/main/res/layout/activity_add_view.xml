<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context="edu.mhu.cs.brandonwatkins.deardiary.AddViewActivity">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="310dp"
        android:layout_height="83dp"
        android:layout_marginTop="180dp"
        android:background="@color/light_pink"
        android:onClick="viewPreviousBtn"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/viewprevbtn" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="310dp"
        android:layout_height="83dp"
        android:layout_marginTop="7dp"
        android:background="@color/light_pink"
        android:onClick="newEntryBtn"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/newentrybtn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/deardiarylogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
